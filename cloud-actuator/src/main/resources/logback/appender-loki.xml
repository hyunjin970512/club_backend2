<included>
  <appender name="LOKI" class="com.github.loki4j.logback.Loki4jAppender">
    <http>
      <url>https://loki.koreazinc.co.kr/loki/api/v1/push</url>
    </http>
    <format>
      <label>
          <pattern>service_name=${APP_NAME},host=${HOSTNAME},level=%level,profile=${PROFILE}</pattern>
      </label>
      <message class="com.github.loki4j.logback.JsonLayout" />
    </format>
  </appender>
</included>